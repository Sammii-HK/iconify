{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/web",
  "rewrites": [
    {
      "source": "/api/convert",
      "destination": "/api/convert"
    },
    {
      "source": "/api/favicon",
      "destination": "/api/favicon"
    },
    {
      "source": "/api/og-image",
      "destination": "/api/og-image"
    },
    {
      "source": "/((?!favicon\\.ico|robots\\.txt|sitemap\\.xml|styles\\.css|app\\.js|.*\\.ico|.*\\.png|.*\\.jpg|.*\\.jpeg|.*\\.svg|.*\\.css|.*\\.js).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/favicon.ico",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/x-icon"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    }
  ]
}
