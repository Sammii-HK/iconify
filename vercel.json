{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/web",
  "rewrites": [
    {
      "source": "/api/convert",
      "destination": "/api/convert"
    },
    {
      "source": "/api/favicon",
      "destination": "/api/favicon"
    },
    {
      "source": "/api/og-image",
      "destination": "/api/og-image"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    }
  ]
}
